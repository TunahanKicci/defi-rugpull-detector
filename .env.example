# Application
APP_NAME=RugPullDetector
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Blockchain RPC Endpoints (Free Options)
ETHEREUM_RPC=https://eth.llamarpc.com
BSC_RPC=https://bsc-dataseed.binance.org
POLYGON_RPC=https://polygon-rpc.com

# WebSocket RPC (Alchemy/Infura Free Tier)
ETHEREUM_WSS=wss://eth-mainnet.g.alchemy.com/v2/your-api-key
BSC_WSS=wss://bsc-ws-node.nariox.org:443

# API Keys (Free Tier)
ETHERSCAN_API_KEY=your-etherscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key
COINGECKO_API_KEY=optional-for-free-tier

# Database (Optional for development)
MONGODB_URI=mongodb://localhost:27017/rugpulldetector
REDIS_URI=redis://localhost:6379/0

# Cache Configuration
CACHE_ENABLED=True
CACHE_TTL=3600

# ML Model Configuration
MODEL_PATH=backend/data/models
SCAM_DATABASE_PATH=backend/data/scam_database

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
ENABLE_WEBSOCKET_MONITORING=True
WEBSOCKET_RECONNECT_ATTEMPTS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
